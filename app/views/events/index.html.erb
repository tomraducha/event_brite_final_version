<p style="color: green"><%= notice %></p>

<h1>Events</h1>

<div id="events">
  <% @events.each do |event| %>
    <%= render event %>
    <p>
      <%= link_to "Show this event", event %>
    </p>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to "New event", new_event_path %>
<% else %>
  <p>t'es moche</p>
<% end %>